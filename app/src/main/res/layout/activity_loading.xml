<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueback"
    tools:context=".Activities.LoadingActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/rooms_LTV_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/lottie_loading"
        app:lottie_speed="1.5" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rooms_LTV_work"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_loadingcircle_start"
        app:lottie_speed="1" />

</RelativeLayout>
